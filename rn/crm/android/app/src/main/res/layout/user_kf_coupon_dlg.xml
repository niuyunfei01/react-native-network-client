<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

<TextView android:id="@+id/label_least_amount"
    android:text="满多少:"
    android:textColor="@color/light_blue"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="36dp" />

<EditText android:id="@+id/kf_coupon_least_amount"
    android:textColor="@color/light_blue"
    android:layout_alignParentTop="true"
    android:layout_toEndOf="@id/label_least_amount"
    android:inputType="number"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:background="@drawable/edittext_style"/>

<TextView android:id="@+id/label_reduce_amount"
    android:text="减多少:"
    android:textColor="@color/light_blue"
    android:layout_alignParentStart="true"
    android:layout_below="@id/label_least_amount"
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="36dp" />

<EditText android:id="@+id/kf_coupon_reduce_amount"
    android:textColor="@color/light_blue"
    android:layout_toEndOf="@id/label_reduce_amount"
    android:layout_below="@id/label_least_amount"
    android:inputType="number"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:background="@drawable/edittext_style"/>

<TextView
    android:id="@+id/label_kf_msg"
    android:layout_below="@+id/label_reduce_amount"
    android:layout_alignParentStart="true"
    android:text="给用户留言:"
    android:textColor="@color/light_blue"
    android:layout_width="wrap_content"
    android:layout_height="36dp" />

<EditText android:id="@+id/kf_msg_to_user"
    android:layout_below="@id/label_reduce_amount"
    android:textColor="@color/light_blue"
    android:layout_toEndOf="@+id/label_kf_msg"
    android:inputType="textMultiLine"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/edittext_style"/>

</RelativeLayout>