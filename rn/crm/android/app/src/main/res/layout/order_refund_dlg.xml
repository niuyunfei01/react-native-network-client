<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

<TextView android:id="@+id/label_order_user_paid"
    android:text="用户支付金额:"
    android:textColor="@color/light_blue"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="36dp" />

<TextView android:id="@+id/label_refund_amount"
    android:text="退款金额:"
    android:textColor="@color/light_blue"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/label_order_user_paid"
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="36dp" />

<EditText android:id="@+id/order_refund_least_amount"
    android:textColor="@color/light_blue"
    android:layout_alignParentTop="true"
    android:layout_toEndOf="@id/label_refund_amount"
    android:inputType="number"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:background="@drawable/edittext_style"/>

<TextView android:id="@+id/label_refund_reason"
    android:text="退款原因:"
    android:textColor="@color/light_blue"
    android:layout_alignParentStart="true"
    android:layout_below="@id/label_refund_amount"
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="36dp" />

<EditText android:id="@+id/order_refund_cause"
    android:textColor="@color/light_blue"
    android:layout_toEndOf="@id/label_refund_reason"
    android:inputType="number"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:background="@drawable/edittext_style"/>

 <TextView
    android:id="@+id/label_refund_detail"
    android:layout_below="@id/label_refund_reason"
    android:layout_alignParentStart="true"
    android:text="金额明细:"
    android:textColor="@color/light_blue"
    android:layout_width="wrap_content"
    android:layout_height="36dp" />

<EditText android:id="@+id/order_refund_detail"
    android:layout_below="@id/label_refund_reason"
    android:textColor="@color/light_blue"
    android:layout_toEndOf="@+id/label_refund_detail"
    android:inputType="textMultiLine"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/edittext_style"/>

 <TextView android:id="@+id/label_order_refund"
     android:layout_below="@id/label_refund_detail"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="退款方式"/>

</RelativeLayout>