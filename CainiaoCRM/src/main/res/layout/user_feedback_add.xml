<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/order_label"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="@string/order_text"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/order_id"
        android:text="#546"
        android:textSize="18sp"
        android:layout_toEndOf="@id/order_label"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/order_platform_no"
        android:layout_toEndOf="@id/order_id"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/order_label"
        android:text="客诉来源"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner android:id="@+id/feedback_source"
        android:layout_below="@+id/order_label"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="@string/process_right_once"
        android:layout_below="@id/feedback_source"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Switch
        android:id="@+id/emergency"
        android:layout_below="@id/feedback_source"
        android:layout_alignParentEnd="true"
        android:textOn="是"
        android:textOff="否"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/feedback"
        android:layout_below="@id/emergency"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine|textNoSuggestions"
        android:hint="@string/feedback_hint"
        android:lines="4"
        />

    <Button
        android:layout_below="@id/feedback"
        android:id="@+id/cancel_btn"
        android:text="@string/cancel"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_below="@id/feedback"
        android:id="@+id/save_btn"
        android:layout_toEndOf="@id/cancel_btn"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginStart="10dp"
        android:text="@string/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>