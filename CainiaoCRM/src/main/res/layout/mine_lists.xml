<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layercontainer"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <ListView
        android:id="@+id/nav_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/storage_item_status"/>
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:typeface="sans"/>

    <TextView
        android:id="@+id/text_device_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/storage_item_status"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:typeface="sans"/>

    <ImageView
        android:id="@+id/storage_item_status"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"/>

    <!-- delay overview start -->
    <LinearLayout android:id="@+id/delayed_overview"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/text1"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/delayed_overview_last_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/last_week_in_time_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/last_week_avg_ready_time"
            android:layout_marginStart="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/delayed_overview_today"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/today_in_time_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/toady_avg_ready_time"
            android:layout_marginStart="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button android:id="@+id/btn_view_all_late"
                android:layout_width="wrap_content"
                android:text="延误订单"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_view_all_serious"
                android:text="严重延误订单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <!-- delay overview end -->

    <!-- users overview start -->
    <RelativeLayout
        android:id="@+id/user_rst_overview"
        android:layout_toEndOf="@+id/text1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/week_new_user"
            android:text="本周新客: 0"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/list_item_bg"/>

        <TextView android:id="@+id/week_retent_user"
            android:text="回头客: 0"
            android:layout_toEndOf="@+id/week_new_user"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/list_item_bg"
            />

        <TextView android:id="@+id/total_complain_todo"
            android:text="待处理客诉: 0"
            android:layout_below="@id/week_new_user"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/list_item_bg"
            />

        <TextView android:id="@+id/total_complain_done"
            android:layout_below="@id/week_new_user"
            android:layout_toEndOf="@id/total_complain_todo"
            android:text="已处理客诉: 0"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/list_item_bg"
            />
    </RelativeLayout>
    <!-- users overview end -->

</RelativeLayout>