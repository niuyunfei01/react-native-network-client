<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    tools:ignore="MergeRootFrame">

    <RelativeLayout android:id="@+id/order_q_filters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioGroup android:id="@+id/order_q_store_filter"
            android:checkedButton="@+id/order_q_store_all"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/order_q_store_all"
                android:text="全部"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onStoreFilterClicked"/>
            <RadioButton
                android:id="@+id/order_q_store_hlg"
                android:text="回龙观"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onStoreFilterClicked" />
            <RadioButton
                android:id="@+id/order_q_store_yyc"
                android:text="亚运村"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onStoreFilterClicked" />
            <RadioButton
                android:id="@+id/order_q_store_unknown"
                android:text="未知"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onStoreFilterClicked" />
        </RadioGroup>

        <Button android:id="@+id/order_query_search"
            android:layout_below="@+id/order_q_store_filter"
            android:text="查询"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_below="@+id/order_q_filters"
        android:id="@+id/order_query_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/order_query_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="8dp"
            android:footerDividersEnabled="false" />
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>

