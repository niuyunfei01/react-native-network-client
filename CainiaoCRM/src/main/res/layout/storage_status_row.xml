<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/basic_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/good_icon"
            android:layout_width="@dimen/list_good_image_size"
            android:layout_height="@dimen/list_good_image_size"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:paddingTop="2dp"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/sold_5day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/good_icon"
            android:layout_marginStart="5dp"
            android:layout_marginTop="@dimen/list_good_sold_margin_top"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@id/good_icon"
            android:gravity="start"
            android:textSize="@dimen/tiny_text" />

        <TextView
            android:id="@+id/sold_5day_fen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/good_icon"
            android:layout_marginTop="@dimen/list_good_sold_margin_top"
            android:layout_toEndOf="@id/sold_5day"
            android:gravity="start"
            android:text="份"
            android:textSize="@dimen/tiny_text" />

        <TextView
            android:id="@+id/sold_weekend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/good_icon"
            android:layout_marginStart="5dp"
            android:layout_marginTop="@dimen/list_good_sold_margin_top"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@id/sold_5day_fen"
            android:paddingBottom="5dp"
            android:textSize="@dimen/tiny_text" />

        <TextView
            android:id="@+id/sold_weekend_fen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/good_icon"
            android:layout_marginTop="@dimen/list_good_sold_margin_top"
            android:layout_toEndOf="@id/sold_weekend"
            android:text="份"
            android:textSize="@dimen/tiny_text" />

        <TextView
            android:id="@+id/sold_latest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/good_icon"
            android:layout_marginStart="5dp"
            android:layout_marginTop="@dimen/list_good_sold_margin_top"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@id/sold_weekend_fen"
            android:paddingBottom="5dp"
            android:textSize="@dimen/tiny_text" />

        <TextView
            android:id="@+id/sold_latest_fen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/good_icon"
            android:layout_marginTop="@dimen/list_good_sold_margin_top"
            android:layout_toEndOf="@id/sold_latest"
            android:text="份"
            android:textSize="@dimen/tiny_text" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/good_icon"
            android:paddingStart="2dp"
            android:paddingTop="2dp"
            android:paddingEnd="2dp"
            android:paddingBottom="5dp"
            android:textColor="#000000"
            android:textSize="@dimen/mini_text"
            android:typeface="sans" />

        <TextView
            android:id="@+id/store_prod_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@id/good_icon"
            android:background="@drawable/list_text_border_green_mini"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textSize="@dimen/tiny_text" />

        <TextView
            android:id="@+id/lowest_risk_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@id/store_prod_status"
            android:background="@drawable/list_text_border_green_mini"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textSize="@dimen/tiny_text"
            android:visibility="gone" />

        <TextView
            android:id="@+id/re_on_sale_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@id/lowest_risk_num"
            android:background="@drawable/list_text_border_green_mini"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textSize="@dimen/tiny_text"
            android:visibility="gone" />

        <TextView
            android:id="@+id/provide_total_req"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@id/re_on_sale_desc"
            android:background="@drawable/list_text_border_green_mini"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textSize="@dimen/tiny_text"
            android:visibility="gone" />

        <TextView
            android:id="@+id/shelf_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@id/provide_total_req"
            android:background="@drawable/list_text_border_green_mini"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:textSize="@dimen/tiny_text"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/total_last_stat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/text_editable_border"
            android:textColor="@color/editable_text_blue"
            android:textSize="@dimen/tiny_text" />

        <TextView
            android:id="@+id/supply_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/total_last_stat"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/text_editable_border"
            android:padding="4dp"
            android:textColor="@color/editable_text_blue"
            android:textSize="@dimen/tiny_text" />

        <TextView
            android:id="@+id/sale_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/total_last_stat"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/text_editable_border"
            android:text="￥12.20"
            android:textColor="@color/editable_text_blue"
            android:textSize="@dimen/mini_text" />

        <TextView
            android:id="@+id/applying_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/supply_price"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="5dp"
            android:text="￥12.20"
            android:textColor="@color/gray"
            android:textSize="@dimen/mini_text" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/wm_info_bar"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@id/basic_info"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:id="@+id/wm_bd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="25"
            android:drawableStart="@drawable/baidu_list"
            android:minHeight="0dp"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp"
            android:text="" />

        <Button
            android:id="@+id/wm_mt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="25"
            android:drawableStart="@drawable/meituan_list"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp"
            android:text="" />

        <Button
            android:id="@+id/wm_mt_sg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="25"
            android:drawableStart="@drawable/meituan_list"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp"
            android:text="" />

        <Button
            android:id="@+id/wm_elema"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="25"
            android:drawableStart="@drawable/elema_list"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp"
            android:text="" />

        <Button
            android:id="@+id/wm_jd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="25"
            android:drawableStart="@drawable/jingdong_list"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp"
            android:text="" />

    </LinearLayout>
</RelativeLayout>