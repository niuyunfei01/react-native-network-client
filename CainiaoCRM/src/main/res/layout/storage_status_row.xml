<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout android:layout_alignParentStart="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/product_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:textSize="@dimen/mini_text"
        android:textColor="#000000"
        android:typeface="sans"/>

    <TextView android:id="@+id/store_prod_status"
        android:layout_below="@id/product_name"
        android:textSize="@dimen/tiny_text"
        android:background="@drawable/list_text_border_green_mini"
        android:layout_marginStart="2dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/lowest_risk_num"
        android:layout_toEndOf="@id/store_prod_status"
        android:layout_below="@id/product_name"
        android:background="@drawable/list_text_border_green_mini"
        android:textSize="@dimen/tiny_text"
        android:layout_marginStart="2dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:visibility="gone"
        android:layout_marginBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/re_on_sale_desc"
        android:layout_toEndOf="@id/lowest_risk_num"
        android:layout_below="@id/product_name"
        android:background="@drawable/list_text_border_green_mini"
        android:textSize="@dimen/tiny_text"
        android:layout_marginStart="2dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:visibility="gone"
        android:layout_marginBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/provide_total_req"
        android:layout_below="@id/product_name"
        android:layout_toEndOf="@id/re_on_sale_desc"
        android:background="@drawable/list_text_border_green_mini"
        android:layout_marginStart="2dp"
        android:visibility="gone"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:textSize="@dimen/tiny_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
     </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentEnd="true"
        android:layout_width="120dp"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/total_last_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/sold_5day"
        android:paddingTop="5dp"
        android:paddingBottom="2dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="@dimen/tiny_text"
        android:textColor="#000000"
        android:typeface="sans"/>

    <TextView
        android:id="@+id/sale_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/total_last_stat"
        android:layout_toStartOf="@+id/sold_weekend"
        android:paddingTop="2dp"
        android:paddingBottom="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="ï¿¥12.20"
        android:textSize="@dimen/tiny_text"
        android:textColor="#000000"
        android:typeface="sans"/>

    <TextView
        android:id="@+id/sold_5day"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:paddingTop="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="2dp"
        android:textSize="@dimen/tiny_text"
        android:textColor="#000000"
        android:typeface="sans"/>

    <TextView
        android:id="@+id/sold_weekend"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/sold_5day"
        android:gravity="end"
        android:paddingBottom="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="2dp"
        android:textSize="@dimen/tiny_text"
        android:textColor="#000000"
        android:typeface="sans"/>

    </RelativeLayout>

</RelativeLayout>