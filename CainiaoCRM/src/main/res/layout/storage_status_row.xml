<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout android:id="@+id/basic_info" android:layout_alignParentStart="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/good_icon"
            android:layout_marginStart="2dp"
            android:paddingTop="2dp"
            android:layout_alignParentStart="true"
            android:layout_width="@dimen/list_good_image_size"
            android:layout_height="@dimen/list_good_image_size"
            android:src="@drawable/placeholder"
            />

        <TextView
            android:id="@+id/sold_5day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/good_icon"
            android:layout_toEndOf="@id/good_icon"
            android:gravity="start"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="@dimen/list_good_sold_margin_top"
            android:textSize="@dimen/tiny_text"
            />
        <TextView android:id="@+id/sold_5day_fen"
            android:layout_toEndOf="@id/sold_5day"
            android:layout_below="@id/good_icon"
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_good_sold_margin_top"
            android:text="份"
            android:textSize="@dimen/tiny_text" />

        <TextView
            android:id="@+id/sold_weekend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/sold_5day_fen"
            android:layout_below="@id/good_icon"
            android:paddingBottom="5dp"
            android:layout_marginTop="@dimen/list_good_sold_margin_top"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="2dp"
            android:textSize="@dimen/tiny_text"
            />
        <TextView android:id="@+id/sold_weekend_fen"
            android:layout_below="@id/good_icon"
            android:layout_toEndOf="@id/sold_weekend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_good_sold_margin_top"
            android:text="份"
            android:textSize="@dimen/tiny_text" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/good_icon"
        android:paddingTop="2dp"
        android:paddingBottom="5dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:textSize="@dimen/mini_text"
        android:textColor="#000000"
        android:typeface="sans"/>

    <TextView android:id="@+id/store_prod_status"
        android:layout_toEndOf="@id/good_icon"
        android:layout_below="@id/product_name"
        android:textSize="@dimen/tiny_text"
        android:background="@drawable/list_text_border_green_mini"
        android:layout_marginStart="2dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/lowest_risk_num"
        android:layout_toEndOf="@id/store_prod_status"
        android:layout_below="@id/product_name"
        android:background="@drawable/list_text_border_green_mini"
        android:textSize="@dimen/tiny_text"
        android:layout_marginStart="2dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:visibility="gone"
        android:layout_marginBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/re_on_sale_desc"
        android:layout_toEndOf="@id/lowest_risk_num"
        android:layout_below="@id/product_name"
        android:background="@drawable/list_text_border_green_mini"
        android:textSize="@dimen/tiny_text"
        android:layout_marginStart="2dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:visibility="gone"
        android:layout_marginBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/provide_total_req"
        android:layout_below="@id/product_name"
        android:layout_toEndOf="@id/re_on_sale_desc"
        android:background="@drawable/list_text_border_green_mini"
        android:layout_marginStart="2dp"
        android:visibility="gone"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:textSize="@dimen/tiny_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
     </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentEnd="true"
        android:layout_width="120dp"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/total_last_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="2dp"
        android:textSize="@dimen/tiny_text"
        android:textColor="@color/editable_text_blue"
        android:background="@drawable/text_editable_border"
        />

    <TextView
        android:id="@+id/supply_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/total_last_stat"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="2dp"
        android:padding="4dp"
        android:textSize="@dimen/tiny_text"
        android:textColor="@color/editable_text_blue"
        android:background="@drawable/text_editable_border"
        />

    <TextView
        android:id="@+id/sale_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/total_last_stat"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="2dp"
        android:text="￥12.20"
        android:textColor="@color/editable_text_blue"
        android:textSize="@dimen/mini_text"
        android:background="@drawable/text_editable_border"
        />

    <TextView
        android:id="@+id/applying_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/supply_price"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="2dp"
        android:text="￥12.20"
        android:textColor="@color/gray"
        android:textSize="@dimen/mini_text"
        />

    </RelativeLayout>

    <LinearLayout android:id="@+id/wm_info_bar"
        android:layout_below="@id/basic_info"
        android:layout_width="fill_parent"
        android:descendantFocusability="blocksDescendants"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:weightSum="100">
    <Button
        android:id="@+id/wm_bd"
        android:layout_width="0dp"
        android:layout_weight="25"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:drawableStart="@drawable/baidu_list"
        android:minHeight="0dp"
        android:text=""/>

    <Button
        android:id="@+id/wm_mt"
        android:layout_width="0dp"
        android:layout_weight="25"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:drawableStart="@drawable/meituan_list"
        android:text=""/>

    <Button
        android:id="@+id/wm_elema"
        android:layout_width="0dp"
        android:layout_weight="25"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:drawableStart="@drawable/elema_list"
        android:text=""/>

    <Button
        android:id="@+id/wm_jd"
        android:layout_width="0dp"
        android:layout_weight="25"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:drawableStart="@drawable/jingdong_list"
        android:text=""/>

    </LinearLayout>
</RelativeLayout>