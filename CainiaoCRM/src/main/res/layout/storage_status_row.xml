<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/product_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:textSize="@dimen/small_text"
        android:textColor="#000000"
        android:typeface="sans"/>

    <TextView android:id="@+id/store_prod_status"
        android:layout_below="@id/product_name"
        android:textSize="@dimen/mini_text"
        android:background="@drawable/list_text_border_green_mini"
        android:layout_marginStart="2dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/product_provide_type"
        android:layout_below="@id/product_name"
        android:layout_toEndOf="@id/store_prod_status"
        android:background="@drawable/list_text_border_green_mini"
        android:layout_marginStart="2dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:textSize="@dimen/mini_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/lowest_risk_num"
        android:layout_toEndOf="@id/product_provide_type"
        android:layout_below="@id/product_name"
        android:background="@drawable/list_text_border_green_mini"
        android:textSize="@dimen/mini_text"
        android:layout_marginStart="2dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_marginBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/total_last_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/sold_5day"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:typeface="sans"/>

    <TextView
        android:id="@+id/sold_5day"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:paddingTop="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:typeface="sans"/>

    <TextView
        android:id="@+id/sold_weekend"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/sold_5day"
        android:gravity="end"
        android:paddingBottom="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:typeface="sans"/>

</RelativeLayout>