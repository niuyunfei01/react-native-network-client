<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/one_order"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
    android:layout_marginTop="5.0dip"
    android:paddingBottom="8dp"
    android:baselineAligned="false"
    android:background="@drawable/list_item_bg">

    <RelativeLayout
        android:background="@color/order_head_styled"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:ellipsize="middle"
            android:id="@+id/feedbackId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dip"/>
        <TextView
            android:id="@+id/fb_from_user"
            android:textColor="#555555"
            android:ellipsize="middle"
            android:paddingStart="3.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/feedbackId"
            android:layout_centerVertical="true"
            android:text="张先生"/>

        <TextView android:id="@+id/fb_current_assigned"
            android:layout_toStartOf="@+id/fb_status"
            android:text="张蕾"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fb_status"
            android:layout_marginStart="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="处理中"/>

    </RelativeLayout>

    <TextView
            android:id="@+id/fb_content"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="总是漏掉东西，忍无可忍了"
            android:textSize="16.0sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fb_reported_by"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/fb_reported_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2.0dip"
            android:layout_toEndOf="@+id/fb_reported_by"
            android:ellipsize="middle"
            android:textColor="@color/light_blue" />

    </RelativeLayout>

</LinearLayout>