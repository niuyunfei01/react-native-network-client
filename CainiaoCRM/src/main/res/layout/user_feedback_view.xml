<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/order_label"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="@string/order_text"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/order_id"
        android:text="#546"
        android:textSize="18sp"
        android:layout_toEndOf="@id/order_label"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/order_platform_no"
        android:layout_toEndOf="@id/order_id"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/order_label"
        android:text="客诉来源"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView android:id="@+id/from_username"
        android:layout_below="@+id/order_label"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/feedback_source"
        android:layout_below="@+id/order_label"
        android:layout_toStartOf="@id/from_username"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/need_process_now"
        android:text="@string/process_right_once"
        android:layout_below="@id/feedback_source"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/feedback"
        android:layout_below="@id/need_process_now"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>