<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layercontainer"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ListView
        android:id="@+id/list_category"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4" />

    <RelativeLayout
        android:id="@+id/storage_list_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <AutoCompleteTextView
            android:id="@+id/title_product_name"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:hint="@string/search_product_hint"
            android:imeOptions="actionSearch"
            android:padding="10dp"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/tiny_text" />

        <ImageButton
            android:id="@+id/goods_search"
            android:layout_width="110dp"
            android:layout_height="0dp"
            android:layout_alignBottom="@+id/title_product_name"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/title_product_name"
            android:layout_toStartOf="@id/prods_sort_spinner"
            android:paddingEnd="10dp"
            android:src="@drawable/ic_search_black_24dp"
            tools:ignore="RtlSymmetry" />

        <Spinner
            android:id="@+id/prods_sort_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:paddingBottom="10dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/tiny_text" />

        <ImageView
            android:id="@+id/title_storage_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingBottom="12dp"
            android:paddingTop="12dp" />

        <ListView
            android:id="@+id/list_storage_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prods_sort_spinner" />
    </RelativeLayout>
</LinearLayout>