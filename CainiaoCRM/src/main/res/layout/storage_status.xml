<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layercontainer"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <Spinner android:id="@+id/spinner_curr_status"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button android:id="@+id/btn_empty_list"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btn_req_list"
        android:text="零库存(0)"
        android:textSize="@dimen/mini_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/btn_req_list"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="订货单(0)"
        android:textSize="@dimen/mini_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@+id/spinner_curr_status">

    <ListView
        android:id="@+id/list_category"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4" />

    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/storage_list_title"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <AutoCompleteTextView
            android:id="@+id/title_product_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:imeOptions="actionSearch"
            android:hint="@string/search_product_hint"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:background="@color/darkolivegreen"
            android:typeface="sans"/>

        <TextView
            android:id="@+id/title_total_last_stat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/title_total_sold"
            android:paddingBottom="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="10dp"
            android:text="库存"
            android:textSize="16sp"
            android:textColor="#000000"
            android:background="@color/darkolivegreen"
            android:typeface="sans"/>

        <TextView
            android:id="@+id/title_total_sold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/title_storage_item_status"
            android:paddingBottom="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="10dp"
            android:textSize="16sp"
            android:text="已售"
            android:textColor="#000000"
            android:background="@color/darkolivegreen"
            android:typeface="sans"/>

        <ImageView
            android:id="@+id/title_storage_item_status"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"/>

        <ListView
            android:id="@+id/list_storage_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_total_last_stat"/>

    </RelativeLayout>

    </LinearLayout>

</RelativeLayout>