<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layercontainer"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <TextView android:id="@+id/label_sound_notify"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="禁用语音播报"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <Switch android:id="@+id/toggleSoundNotify"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/label_sound_notify" />

    <TextView android:id="@+id/label_auto_print_hlg"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/label_sound_notify"
        android:layout_marginStart="10dp"
        android:text="自动打印回龙观" />

    <Switch android:id="@+id/togglePrintHLG"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/toggleSoundNotify"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/label_auto_print_hlg" />

    <TextView android:text="自动打印亚运村"
        android:id="@+id/label_auto_print_yyc"
        android:layout_below="@+id/label_auto_print_hlg"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_height="30dp"/>

    <Switch android:id="@+id/togglePrintYYC"
        android:layout_below="@+id/togglePrintHLG"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/label_auto_print_yyc"
        android:layout_width="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_height="30dp" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/togglePrintYYC"
        android:layout_marginTop="30dp"
        android:layout_alignEnd="@+id/image1"/>
    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:typeface="sans"/>

    <TextView
        android:id="@+id/text_device_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/image1"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:typeface="sans"/>

    <ImageView
        android:id="@+id/image1"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>