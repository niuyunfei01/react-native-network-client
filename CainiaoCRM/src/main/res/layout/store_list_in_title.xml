<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="0dp"
    android:layout_margin="0dp"
    android:gravity="end"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent">
    <Spinner android:id="@+id/spinner_curr_store"
        android:focusable="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Spinner android:id="@+id/spinner_curr_status"
        android:layout_toEndOf="@id/spinner_curr_store"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button android:id="@+id/btn_empty_list"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/btn_req_list"
        android:text="零库存(0)"
        android:textSize="@dimen/tiny_text"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:minHeight="40dp"
        android:minWidth="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/btn_req_list"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/add_new_prod"
        android:text="订货(0)"
        android:textSize="@dimen/tiny_text"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/add_new_prod"
        android:text="@string/add_prod"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>