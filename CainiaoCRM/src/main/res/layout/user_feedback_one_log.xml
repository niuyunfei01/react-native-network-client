<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/one_order"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
    android:layout_marginTop="5.0dip"
    android:paddingBottom="8dp"
    android:baselineAligned="false"
    android:background="@drawable/list_item_bg">

    <RelativeLayout
        android:background="@color/order_head_styled"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/light_blue"
            android:ellipsize="middle"
            android:id="@+id/log_by_userName"
            android:paddingStart="5.0dip"
            android:paddingEnd="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2.0dip"
            android:layout_alignParentStart="true"
            android:text="#13"
            android:singleLine="true"
            android:layout_marginBottom="5dip"/>

        <TextView
            android:id="@+id/log_created"
            android:layout_marginEnd="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="2016-07-09 20:31"/>
    </RelativeLayout>

    <TextView
            android:id="@+id/log_content"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="用户反馈桔子有点酸了"
            android:textSize="16.0sp"/>

</LinearLayout>